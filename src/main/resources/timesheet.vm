</script>

<script>
    function getUsedCategoryNames(data) {
        var labelNames = [];

		for (var i = 0; i < data.length; i++) {
			for ( property in data[i] ) {
				if ( property !== "year" ) {
					if ( data[i][property] !== 0 && data[i][property] !== undefined ) {
						if ( !labelNames.includes(property) ) {
		              		labelNames.push(property);
		            	}
				    }
			    }
		    }
		}
		return labelNames;
	  }
</script>

